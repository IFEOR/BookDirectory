<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_indention"
            android:layout_marginStart="@dimen/std_indention"
            android:layout_marginEnd="@dimen/std_indention"
            android:minHeight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <ImageView
                    android:id="@+id/item_book_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/item_book_no_photo_desc"
                    android:layout_weight="1"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:layout_marginStart="@dimen/std_indention"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/std_indention"
                    android:paddingBottom="@dimen/std_indention">

                    <TextView
                        android:id="@+id/item_book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/std_indention" />

                    <TextView
                        android:id="@+id/item_author_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/std_indention" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
